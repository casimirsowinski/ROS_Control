<launch>
  <!-- Launch file for testing URDF/XACRO
       Casimir Sowinski, 2016
  -->
  <!-- Load the URDF/Xacro model of our robot -->
  <!--arg name="urdf_file" default="$(find xacro)/xacro.py '$(find robo_description)/urdf/CURRENTFILE.urdf'" /-->
  <arg name="urdf_file" default="$(find xacro)/xacro.py '$(find robo_description)/urdf/robo_two_arms_realsense.xacro'" />

  <param name="robot_description" command="$(arg urdf_file)" />
    
  <!-- Publish the robot state -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="state_publisher">
    <param name="publish_frequency" value="20.0"/>
  </node>

  <!-- Provide simulated control of the robot joint angles -->
  <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher">
    <param name="use_gui" value="True" />
    <param name="rate" value="20.0"/>
  </node>
</launch>
